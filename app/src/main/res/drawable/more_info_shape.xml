

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape android:shape="rectangle">
        <solid android:color="#66000000"/>
        <corners
            android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp"
            android:topLeftRadius="20dp" android:topRightRadius="80dp"/>


    </shape>
</item>

<item
    android:left="1dp"
    android:right="5dp"
    android:top="1dp"
    android:bottom="5dp">
    <shape android:shape="rectangle">
        <solid android:color="#ffffff"/>


        <corners
            android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp"
            android:topLeftRadius="20dp" android:topRightRadius="90dp"/>


        <gradient
            android:angle="90"
            android:startColor="#ffffff"
            android:endColor="#ffffff"
            android:type="linear" />


    </shape>
</item>
</layer-list>