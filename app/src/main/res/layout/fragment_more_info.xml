<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moreInfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/more_info_shape"
    tools:context="com.grabandgo.gng.gng.MoreInfoFragment"
    android:layout_margin="15dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp">

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/falafel"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/title_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/header_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/header_image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/header_image"
                android:layout_toStartOf="@+id/header_image"
                android:maxLines="5"
                android:minLines="0"
                android:text="Restaurant Quality Fried Chicken"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="27dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_text_tv"
                android:layout_centerHorizontal="true"
                android:text="______________________________________"
                android:layout_marginBottom="10dp" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/header_image"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/imageView3"
                    android:layout_toStartOf="@+id/imageView3"
                    android:src="@drawable/vegicon" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/hookaicon" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignLeft="@+id/title_text_tv"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/title_text_tv"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/piggybankicon" />

                <TextView
                    android:id="@+id/cat_txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView4"
                    android:layout_alignStart="@+id/imageView4"
                    android:layout_below="@+id/imageView4"
                    android:layout_gravity="center_horizontal|bottom|right"
                    android:layout_marginRight="60dp"
                    android:paddingLeft="20dp"
                    android:text="Billigt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/cat_txt_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="Orientaliskt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/cat_txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_below="@+id/imageView2"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="50dp"
                    android:text="Vegerariskt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="11dp" />
            </FrameLayout>

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Telefon: "
                android:id="@+id/textView2"
                android:layout_below="@+id/textView6"
                android:layout_alignLeft="@+id/title_text_tv"
                android:layout_alignStart="@+id/title_text_tv"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="E-post: "
                android:id="@+id/textView3"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="073 678 12 43"
                android:id="@+id/textView4"
                android:layout_above="@+id/textView3"
                android:layout_toLeftOf="@+id/imageView8"
                android:layout_toStartOf="@+id/imageView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="green@market.com"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="______________________________________"
                android:layout_below="@+id/imageView5"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_below="@+id/frameLayout"
                android:layout_toLeftOf="@+id/imageView6"
                android:layout_toStartOf="@+id/imageView6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_above="@+id/textView6"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_alignTop="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_alignTop="@+id/imageView7"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_toEndOf="@+id/imageView7" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_alignTop="@+id/imageView5"
                android:layout_toLeftOf="@+id/imageView5"
                android:layout_toStartOf="@+id/imageView5" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/more_info_ok_btn"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
